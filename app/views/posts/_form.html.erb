<%= simple_form_for @post do |f| %>
  <div class="form-group">
    <%= f.input :title, input_html: { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.input :body, as: :text, input_html: { class: "form-control", rows: 10 } %>
  </div>

  <%= f.submit class: "btn btn-success" %>
<% end %>
